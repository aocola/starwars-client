{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",     // Carpeta de salida
    "rootDir": "./src",      // Carpeta ra√≠z
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": ["src/**/*.ts"],    // Incluye todos los archivos .ts en src
  "exclude": ["node_modules", "dist", "test"] // Excluye node_modules, dist y test
}
